<body>

<div class="container">
    <h2>üîê Secure Login Simulation</h2>
    <p>Educational Brute Force Awareness Tool</p>

    <input type="password" id="password" placeholder="Enter Password"><br>
    <button onclick="login()">Login</button>
    <button onclick="resetSystem()">Reset</button>

    <div id="message"></div>
    <div id="counter"></div>
    <div id="tips"></div>
</div>

<script>
let correctPassword = "CyberSecure@2026";
let attempts = 0;
let maxAttempts = 5;
let locked = false;
let totalAttackAttempts = 0;

function login() {
    if (locked) {
        showMessage("üîí Account Locked! Too many failed attempts.", "locked");
        return;
    }

    let userPass = document.getElementById("password").value;

    showMessage("‚è≥ Checking password... (3 sec delay)", "");
    
    setTimeout(() => {

        attempts++;
        totalAttackAttempts++;

        if (userPass === correctPassword) {
            showMessage("‚úÖ Login Successful!", "success");
        } else {
            if (attempts >= maxAttempts) {
                locked = true;
                showMessage("üö® Account Locked After 5 Failed Attempts!", "locked");
                showTips();
            } else {
                showMessage("‚ùå Wrong Password!", "warning");
            }
        }

        updateCounter();

    }, 3000);
}

function updateCounter() {
    document.getElementById("counter").innerHTML =
        "Failed Attempts: " + attempts + " / " + maxAttempts +
        "<br>Total Attack Attempts: " + totalAttackAttempts;
}

function showMessage(msg, className) {
    let message = document.getElementById("message");
    message.innerHTML = msg;
    message.className = className;
}

function showTips() {
    document.getElementById("tips").innerHTML =
        "<br>üõ°Ô∏è Security Tips:<br>" +
        "- Use strong passwords<br>" +
        "- Enable 2FA<br>" +
        "- Limit login attempts<br>" +
        "- Use CAPTCHA";
}

function resetSystem() {
    attempts = 0;
    locked = false;
    document.getElementById("password").value = "";
    document.getElementById("message").innerHTML = "";
    document.getElementById("counter").innerHTML = "";
    document.getElementById("tips").innerHTML = "";
}
</script>

</body>
